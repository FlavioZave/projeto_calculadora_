<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/math_back" />

    <EditText
        android:id="@+id/campo_login"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="@string/hint_login"
        android:inputType="text"
        android:maxLength="20"
        android:textAlignment="center"
        android:textColorHint="#989797"
        app:layout_constraintBottom_toTopOf="@+id/campo_senha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/campo_senha"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="@string/hint_senha"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textAlignment="center"
        android:textColorHint="#989797"
        app:layout_constraintBottom_toTopOf="@+id/check_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_login" />

    <Button
        android:id="@+id/botao_login"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginStart="119dp"
        android:layout_marginEnd="120dp"
        android:text="@string/botao_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_login" />

    <CheckBox
        android:id="@+id/check_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="10dp"
        android:text="@string/check_robo"
        app:layout_constraintBottom_toTopOf="@+id/botao_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_senha" />

</androidx.constraintlayout.widget.ConstraintLayout>